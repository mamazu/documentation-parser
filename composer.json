{
    "name": "mamazu/documentation-validator",
    "description": "A validator tool that can validate markdown documentation",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "mamazu",
            "email": "14860264+mamazu@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-json": "*",

        "thecodingmachine/safe": "^0.1.16",
        "nikic/php-parser": "^4.2",
        "symfony/yaml": "^4",
        "gregwar/rst": "dev-line-numbers"
    },
    "require-dev": {
        "phpspec/phpspec": "^5.1|^6.0",
        "phpstan/phpstan": "^0.11.13",
        "phpstan/phpstan-strict-rules": "^0.11.1",
        "phpstan/phpstan-webmozart-assert": "^0.11.2",
        "mikey179/vfsstream": "^1.6",
        "friends-of-phpspec/phpspec-code-coverage": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Mamazu\\DocumentationParser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\": "spec/"
        }
    },
    "scripts": {
        "analyse": [
            "vendor/bin/phpspec run",
            "vendor/bin/phpstan analyse"
        ]
    },
    "bin": [ "bin/doc-parser" ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/mamazu/RST/"
        }
    ]
}
