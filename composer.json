{
    "name": "mamazu/documentation-validator",
    "description": "A validator tool that can validate markdown documentation",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "mamazu",
            "email": "14860264+mamazu@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^7.4|^8",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-json": "*",
        "nikic/php-parser": "^4.2",
        "symfony/yaml": "^4|^5",
        "mamazu/rst": "^2.0",
        "symfony/filesystem": "^4|^5.3"
    },
    "require-dev": {
        "phpspec/phpspec": "^5.1|^6.0",
        "mikey179/vfsstream": "^1.6",
        "phpstan/phpstan": "^0.12.78",
        "phpstan/phpstan-strict-rules": "^0.12.9",
        "phpstan/phpstan-webmozart-assert": "^0.12.12",
        "symplify/easy-coding-standard": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Mamazu\\DocumentationParser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\": "spec/"
        }
    },
    "scripts": {
        "analyse": [
            "vendor/bin/phpspec run",
            "vendor/bin/phpstan analyse"
        ],
        "fix": [
            "vendor/bin/ecs --fix"
        ]
    },
    "bin": [
        "bin/doc-parser"
    ]
}
